        int t; cin >> t;
    while (t--)
    {
        int n, nn; cin >> n >> nn;
        set<int>st;
        int y = 0;
        y = n + nn;
        for (int i = 0; i < n; i++)
        {
            int x; cin >> x;
            st.insert(x);
        }
        for (int i = 0; i < nn; i++)
        {
            int x; cin >> x;
            st.insert(x);
        }
        cout << y - st.size() << '\n';
    }

}

