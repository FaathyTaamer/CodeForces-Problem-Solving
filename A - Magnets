#include <bits/stdc++.h>
#define FIO	 ios_base::sync_with_stdio(false);cin.tie(NULL);
#define ll long long
#define v233Team
using namespace std;

int main()
{
    v233Team
        FIO
   int n;cin>>n;
   int arr[n];
   for(int i =0; i <n;i++)
   {
       cin>>arr[i];
   }
   int counter=0,number=0;
   for(int i =0; i <n;i++)
   {
       if(arr[i]==arr[i+1])
            number++;
            if(number==0)
                counter++;
            number=0;
   }
   cout<<counter<<'\n';

}

