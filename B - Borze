#include <bits/stdc++.h>
#define FIO	 ios_base::sync_with_stdio(false);cin.tie(NULL);
#define ll long long
#define v233Team
#define long long long
using namespace std;
int main()
{
    v233Team
        FIO
        string s; cin >> s;
    for (int i = 0; i < s.size(); i++)
    {
        if (s[i] == '.')
            cout << "0";
        else if (s[i] == '-' && s[i + 1] == '.')
        {
            cout << "1";
            i++;
        }
        else if (s[i] == '-' && s[i + 1] == '-')
        {
            cout << "2";
            i++;
        }
    }
        
}
