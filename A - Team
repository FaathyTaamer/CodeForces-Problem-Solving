#include <iostream>
using namespace std;
int main()
{
	int n, v, t, p, counter = 0;
	cin >> n;
	while (n--)
	{
		cin >> v >> t >> p;
		if (v + t + p >= 2)
		{
			counter++;
		}
	
	}
	cout << counter;
}
