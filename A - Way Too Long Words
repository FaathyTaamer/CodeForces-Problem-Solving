#include <bits/stdc++.h>
#define FIO	 ios_base::sync_with_stdio(false);cin.tie(NULL);
#define ll long long
#define v233Team
using namespace std;
int counter = 0;
int main()
{
    v233Team
        FIO
        int n; cin >> n;
    string vec; 
        for (int i = 0; i < n; i++)
        {
            cin >> vec;
            if (vec.length() > 10)
            {
                counter = vec.length() - 2;
                cout << vec.at(0) << counter << vec.at(vec.length() - 1) << endl;;
            }
            else if (vec.length() <= 10)
                cout << vec << endl;;
}
       
}

