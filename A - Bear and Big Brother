#include <iostream>
using namespace std;
int main()
{
	int x=0, y=0, counter=0;
	cin >> x >> y;
	if (x > y)
	{
		counter = 0;
	}
	else
	{
		while (x <= y)
		{
			x = x * 3;
			y = y * 2;
			counter++;

		}
		
	cout << counter;
	}
}
