#include <bits/stdc++.h>
#define FIO	 ios_base::sync_with_stdio(false);cin.tie(NULL);
#define ll long long
#define v233Team
using namespace std;
int counter = 0;
int main()
{
	v233Team
		FIO
		string x, y; cin >> x >> y;
	int i = 0, j = 0;
	while (i < x.size() && j < y.size())
	{
		if (x[i] == y[j])
		{
			i++;
			j++;
		}
		else
			j++;
	}
	cout << i + 1;
}
