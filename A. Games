#include <bits/stdc++.h>
#define FIO	 ios_base::sync_with_stdio(false);cin.tie(NULL);
#define ll long long
#define v233Team
using namespace std;
int counter = 0;
int main()
{
    v233Team
        FIO
        int n; cin >> n;
    vector<int>vec(n);
    vector<int>vec1(n);
    for (int i = 0; i < n; i++)
    {
        cin >> vec[i] >> vec1[i];
    }
    sort(vec.begin(), vec.end());
    sort(vec1.begin(), vec1.end());
    for (int i = 0; i < n; i++)
    {
        for (int j = 0; j < n; j++)
        {
            if(vec[i]==vec1[j])
                counter++;
        }
    }
    cout << counter;
}

